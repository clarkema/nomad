${font Oligopoly:size=10}${voffset -136}\
${goto 235}${color2}ram: ${goto 345}$memperc%
${goto 235}${color2}alloc:   ${goto 345}$color$mem
${goto 235}${color2}buffers: ${goto 345}$color$buffers
${goto 235}${color2}cache:   ${goto 345}$color$cached

