[core]
    excludesfile = ~/.cvsignore
[color]
    branch      = auto
    diff        = auto
    grep        = auto
    interactive = auto
    status      = auto
    ui          = auto
[diff]
    renames = true
[diff "ruby"]
    funcname = "^ *\\(\\(def\\) .*\\)"
[help]
    autocorrect = 10
[include]
    path = ~/.gitconfig.local
[interactive]
    singlekey = true
[merge]
    tool = vimdiff
[push]
    default = upstream
[rebase]
    autosquash = true
[rerere]
    enabled = true
[alias]
    debt = grep -I 'FIXME\\|TODO\\|XXX'
