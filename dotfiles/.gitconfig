[core]
    excludesfile = ~/.cvsignore
[color]
    branch      = auto
    diff        = auto
    grep        = auto
    interactive = auto
    status      = auto
    ui          = auto
[diff]
    renames = true
[diff "ruby"]
    funcname = "^ *\\(\\(def\\) .*\\)"
[include]
    path = ~/.gitconfig.local
[interactive]
    singlekey = true
[merge]
    tool = vimdiff
    summary = true
[push]
    default = upstream
[rebase]
    autosquash = true
[rerere]
    enabled = true
[alias]
    debt = grep -FI -e TODO -e FIXME -e XXX
[mergetool]
	keepBackup = true
