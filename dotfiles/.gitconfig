[core]
    excludesfile = ~/.nomad/dotfiles/.gitignore
[color]
    branch      = auto
    diff        = auto
    grep        = auto
    interactive = auto
    status      = auto
    ui          = auto
[diff]
    renames = true
    compactionHeuristic = true
[diff "ruby"]
    funcname = "^ *\\(\\(def\\) .*\\)"
[include]
    path = ~/.gitconfig.local
[interactive]
    singleKey = true
[merge]
    tool = vimdiff
    summary = true
[pull]
	ff = only
[push]
    default = upstream
[rebase]
    autosquash = true
[rerere]
    enabled = true
[alias]
    debt = grep -FI -e TODO -e FIXME -e XXX
[mergetool]
	keepBackup = true
[uploadpack]
    allowAnySHA1InWant = true
[init]
    defaultBranch = master
